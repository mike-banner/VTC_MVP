---
// src/pages/settings.astro
import MainLayout from "../layouts/MainLayout.astro";
import { requireTenantRole } from "../lib/rbac";

const { profile } = Astro.locals;

// Protection Guard : Owner uniquement
try {
    requireTenantRole(profile, ["owner"]);
} catch (e) {
    return Astro.redirect("/dashboard");
}
---

<MainLayout title="Paramètres - Owner">
    <div class="max-w-4xl mx-auto px-6 py-12">
        <div class="mb-12">
            <span
                class="px-3 py-1 bg-red-500/10 border border-red-500/20 rounded-full text-[10px] font-black tracking-widest text-red-400 uppercase"
                >Administration</span
            >
            <h1
                class="text-4xl font-black italic mt-4 uppercase tracking-tighter"
            >
                Paramètres Entreprise
            </h1>
            <p class="text-slate-400 mt-2">
                Configuration critique du tenant (Réservé au Propriétaire)
            </p>
        </div>

        <div class="space-y-6">
            <div
                class="glass p-8 rounded-3xl border border-white/5 group hover:border-white/10 transition-all"
            >
                <h3 class="text-lg font-bold mb-4">Informations Générales</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label
                            class="text-xs font-black uppercase tracking-widest text-slate-500"
                            >Nom de l'entreprise</label
                        >
                        <input
                            type="text"
                            class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white"
                            value="Ma Compagnie VTC"
                            readonly
                        />
                    </div>
                </div>
            </div>

            <div
                class="glass p-8 rounded-3xl border border-white/5 bg-red-500/5"
            >
                <h3 class="text-lg font-bold mb-2 text-red-400">
                    Zone de Danger
                </h3>
                <p class="text-sm text-slate-400 mb-6">
                    La suppression du tenant est irréversible et effacera toutes
                    les données.
                </p>
                <button
                    class="px-6 py-3 bg-red-600/20 border border-red-600/30 text-red-500 text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-red-600 hover:text-white transition-all"
                    >Supprimer le compte entreprise</button
                >
            </div>
        </div>
    </div>
</MainLayout>
